{{>layout/header}}

<div class="container">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">{{post.title}} - {{post.author}}</h5>
            <p class="card-text">{{post.content}}</p>

            <!-- 첨부파일 -->
            {{#post.fileId}}
            <div>
                {{#file.isImgExist}}
                    <img src="/display?filename={{file.filename}}" width="300px" />
                    <p></p>
                {{/file.isImgExist}}
                <a href="/download?filename={{file.filename}}">{{file.origFilename}}</a>
            </div>
            {{/post.fileId}}
        </div>

    </div>
    <div class="row mt-3">
        <input type="hidden" id="id" value="{{post.id}}" readonly>
        <div class="col-auto mr-auto"></div>
        <div class="col-auto">
           <button type="button" class="btn btn-primary" onclick="location.href='/posts/update/{{post.id}}'">수정</button>
        </div>
        <div class="col-auto">
            <button type="button" class="btn btn-danger" id="btn-delete">삭제</button>
        </div>
    </div>
</div>


{{>layout/footer}}